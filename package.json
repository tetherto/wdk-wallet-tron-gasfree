{
  "name": "@wdk/wallet-tron-gasfree",
  "version": "1.0.0-beta.1",
  "description": "A package that allows users to do gasless transfers and bridges according to the GasFree standard.",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "build:types": "rimraf *.d.ts **/*.d.ts; tsc",
    "lint": "standard",
    "lint:fix": "standard --fix --env jest",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest",
    "test:debug": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --verbose --detectOpenHandles",
    "test:coverage": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --coverage"
  },
  "dependencies": {
    "@noble/curves": "1.9.2",
    "@noble/hashes": "1.8.0",
    "@noble/secp256k1": "2.3.0",
    "@wdk/wallet-tron": "github:itsdeka/wdk-wallet-tron-main-1",
    "ethers": "6.15.0"
  },
  "devDependencies": {
    "bip39": "3.1.0",
    "cross-env": "7.0.3",
    "jest": "29.7.0",
    "rimraf": "6.0.1",
    "standard": "17.1.2",
    "typescript": "5.8.3"
  }
}
